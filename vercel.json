{
    "version": 2,
    "builds": [
        {
            "src": "backend/api/*.php",
            "use": "@vercel/php"
        },
        {
            "src": "frontend/*.php",
            "use": "@vercel/php"
        },
        {
            "src": "frontend/*.html",
            "use": "@vercel/static"
        },
        {
            "src": "frontend/assets/**",
            "use": "@vercel/static"
        },
        {
            "src": "index.php",
            "use": "@vercel/php"
        }
    ],
    "routes": [
        { "src": "/(css|js|img|assets)/(.*)", "dest": "/frontend/assets/$1/$2" },
        { "src": "/api/(.*)", "dest": "/backend/api/$1" },
        { "src": "/frontend/(.*)", "dest": "/frontend/$1" },
        { "src": "/", "dest": "/index.php" }
    ],
    "env": {
        "DB_HOST": "db.[YOUR-PROJECT-REF].supabase.co",
        "DB_USER": "postgres",
        "DB_PASS": "[YOUR-PASSWORD]",
        "DB_NAME": "postgres",
        "DB_PORT": "5432"
    }
}
